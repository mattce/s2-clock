{
  "name": "s2-clock",
  "version": "0.0.1",
  "description": "a simple HTML / CSS / JS driven Clock showing the current time",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run clean && npm run coffee & npm run jade & npm run sass & npm run server",
    "clean": "rimraf dist/",
    "coffee": "coffee -o dist/js/ -c src/coffee/*.coffee",
    "jade": "jade src/jade/ -o dist/ -wP",
    "sass": "node-sass src/sass/*.scss -o dist/css/",
    "server": "lite-server --open dist --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattce/s2-clock.git"
  },
  "author": "mail@mathiaswalch.de",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mattce/s2-clock/issues"
  },
  "homepage": "https://github.com/mattce/s2-clock#readme",
  "devDependencies": {
    "del": "^2.2.0",
    "lite-server": "^1.3.4",
    "node-sass": "^3.4.2",
    "rimraf": "^2.5.1"
  }
}
